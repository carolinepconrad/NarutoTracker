  <script> 
  //variables
  let x = 1;
  let totalWatched = 3;
  let totalEp = 220;
  let narutoS1 = [];

  //to create array
  while (x <= 26){
      narutoS1.push(x);
      x = x + 1;
  }
  
  
  console.log(narutoS1);
  
  function pleaseWork () {
  for (var i = 0; i < narutoS1.length; i++) {
    const button = document.createElement("button");
    button.innerText = "EP " + narutoS1[i];
    button.onclick = function() {
      button.style.backgroundColor = "#911";
      totalWatched += 1;
      console.log(totalWatched);
      console.log(totalWatched/totalEp)
    };
    document.getElementById("try1").appendChild(button);
  }
}
console.log(totalWatched);


  
  pleaseWork();
  
   
  
  </script>
